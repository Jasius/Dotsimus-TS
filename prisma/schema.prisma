datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Alert {
  id        String  @id @default(auto()) @map("_id") @db.ObjectId
  serverId  String  @unique
  threshold Float
  channelId String
  mention   Mention
}

model ServersConfig {
  id           String  @id @default(auto()) @map("_id") @db.ObjectId
  joinDate     Int
  serverId     String  @unique
  serverName   String
  prefix       String  @default("!")
  isSubscribed Boolean @default(false)
  memberCount  Int
}

model UserInfractions {
  id        String  @id @default(auto()) @map("_id") @db.ObjectId
  serverId  String
  userId    String
  userName  String
  isUserNew Boolean
  message   Message

  @@unique([userId, serverId])
}

model WatchKeyword {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  userId       String
  serverId     String
  watchedWords String[]

  @@unique([userId, serverId])
}

enum MentionType {
  user
  role
}

type Mention {
  type MentionType
  id   String
}

type Message {
  timestamp Int
  message   String
  toxicity  Float
}
