{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "Node",
        "lib": ["ESNext"],
        "strict": true,
        "outDir": "./build",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "importHelpers": true,
        "resolveJsonModule": true,
        "baseUrl": "./src",
        "typeRoots": ["./node_modules/@types", "./typings"]
    },
    "include": ["./src/**/*"],
    "exclude": ["./node_modules"]
}
