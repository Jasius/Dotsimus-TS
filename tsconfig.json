{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "node",
        "lib": ["ESNext"],
        "strict": true,
        "outDir": "build",
        "importHelpers": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "typeRoots": ["node_modules/@types", "src/typings"]
    },
    "include": ["./src/**/*"],
    "exclude": ["node_modules"]
}
